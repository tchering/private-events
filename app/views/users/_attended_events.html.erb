<%#! is rendered in events/show.html.erb %>
<%# todo user is received from event/show.html.erb which parent class is EventsController show method %>
<div class="">
  <h1 class="mb-2 text-center display-4">Attended Events</h1>
  <div class="row">
    <% if events.any? %>
      <% events.each do |event| %>
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-1"><%= event.name %></h5>
            </div>
            <div class="card-body d-flex flex-column">
              <p class="mb-1"><strong>Creator:</strong> <%= event.creator.name %></p>
              <p class="mb-1"><strong>Location:</strong> <%= event.location %></p>
              <small class="text-muted mb-2"><strong>Date:</strong> <%= event.date %></small>
              <a href="<%= event_path(event) %>" class="btn btn-outline-primary mt-auto">View Details</a>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No upcoming events found.</p>
    <% end %>
  </div>
</div>