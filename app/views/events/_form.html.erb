<%#! is being rendered from users/show.html.erb  %>
<%= form_with(model: @event, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Event Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <% event.errors.full_messages_for(:name).each do |msg| %>
      <div class="error"><%= msg %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :location, "Event Location", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
    <% event.errors.full_messages_for(:location).each do |msg| %>
      <div class="error"><%= msg %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :date, 'Date', class: "form-label" %>
    <%= f.date_field :date, class: "form-control" %>
    <% event.errors.full_messages_for(:date).each do |msg| %>
      <div class="error"><%= msg %></div>
    <% end %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>